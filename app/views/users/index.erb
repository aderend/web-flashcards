 <div id="page" class="container">
    <div id="content">
      <h1>Your Stats</h1>
        <div class="spacer"></div>

      <% @user.rounds.each do |round| %>
        <% next if round.deck == nil%>
        <div class="stat_wrapper">
        <h3>Deck Name: <%= round.deck.name %></h3>
        <h3>Completion Date: <%= round.updated_at.to_s[0..9] %></h3>
        <h3>Total Cards: <%= round.deck.cards.count %></h3>
        <h3>Score: <%= round.score%></h3>
        <div class="spacer"></div>
        </div>
        <% end %>
      </div>


        <div id="content">
      <a href="/decks/new">Make a new deck</a>
          <div class="spacer"></div>
      <a href="/users/<%= session[:user_id] %>/logout">Logout</a>
    </div>
    </div>
