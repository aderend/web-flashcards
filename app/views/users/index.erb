

    <div id="page" class="container">
    <div id="content">
      <h1>Your Stats</h1>
        <br>

      <% @user.rounds.each do |round| %>
        <% next if round.deck == nil%>
        <h3>Deck Name: <%= round.deck.name %></h3>
        <h3>Completed At: <%= round.updated_at %></h3>
        <h3>Total Cards: <%= round.deck.cards.count %></h3>
        <h3>Score: <%= round.score%></h3>
        <br>
        <% end %>
      </div>
        <div id="content">
          <div class="spacer"></div>
      <a href="/users/<%= session[:user][:id] %>/logout">Logout</a>
    </div>
    </div>

