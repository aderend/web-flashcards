<%= erb :'/_header' %>

<div id="page" class="container">
   <div id="title">
      <h1>LOGIN</h1>
    </div>
    <div id="content">
      <form class ="smart-green" action="/users/login" method='POST'>
      <ul>
          <li>
          <label for="email">Email</label>
          <input id="email" type="text" name="user[email]" value="" />
        </li>
        <li>
          <label for="password">Password</label>
          <input id="password" type="password" name="user[password]" />
        </li>
        <br>
        <input type='submit' value='Login!' />
      </form>
      <br>
      <br>
      <a href='/users/register'>Don't have an account? Register here!</a>
    </div>

  </div>

<%= erb :'/_footer' %>
